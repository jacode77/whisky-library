<%=form_with model: @listing, local: true do |f|%>
    <div class="form-group mb-3">
        <%=f.label :title, class: "form-label"%>
        <%=f.text_field :title%>
    </div>
        <div class="form-group mb-3">
        <%=f.label :brand_id, class: "form-label"%>
        <%=f.select :brand_id, @brands.map {|b| [b.name, b.id]}, class: "form-select"%>
    </div>
    <div class="form-group mb-3">
        <%=f.label :year, class: "form-label"%>
        <%=f.number_field :year%>
    </div>
    <div class="form-group mb-3">
        <%=f.label :price, class: "form-label"%>
        <%=f.number_field :price%>
    </div>
    <div class="form-group mb-3">
        <%=f.label :category_id, class: "form-label"%>
        <%=f.select :category_id, @categories.map {|m| [m.name, m.id]}, class: "form-select"%>
    </div>
    <div class="form-group mb-3">
        <%=f.label :country_id, class: "form-label"%>
        <%=f.select :country_id, @countries.map {|c| [c.name, c.id]}, class: "form-select"%>
    </div>
     <div class="form-group mb-3">
        <%=f.label :description, class: "form-label"%>
        <%=f.text_area :description, class: "form-control"%>
    </div>
    <div class="actions">
        <%=f.submit%>
    </div>
<%end%>